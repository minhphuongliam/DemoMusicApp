<?xml version="1.0" encoding="utf-8"?>
<!--
    Sử dụng ConstraintLayout làm gốc là một lựa chọn tốt,
    nó linh hoạt và hiệu quả. FrameLayout cũng hoạt động tốt.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.AuthActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_auth"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:navGraph="@navigation/auth_nav_graph"
    app:defaultNavHost="true" />
<!--sử dụng auth nav graph,
defauk navhost để nhận quản lý backstack-->
</androidx.constraintlayout.widget.ConstraintLayout>